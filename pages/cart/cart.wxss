/* pages/cart/cart.wxss */
.car {
  position: relative;
  top: 0;
  left: 0;
  right: 0;
  height: calc(100vh - 80rpx);
  display: flex;
  justify-content: center;
  align-items: center;
}
.mask {
  width: 100%;
  height: 200rpx;
  text-align: center;
  padding: 80rpx 0;
}

.mask .image {
  width: 160rpx;
  height: 160rpx;
}

.car-main {
  overflow: auto;
  height: 100%;
}

.goods-item {
  display: flex;
  height: 280rpx;
  padding: 28rpx 10rpx;
  border-bottom: 4rpx solid #ccc;
}


.goods-item .image {
  height: 100%;
  width: 200rpx;
  margin: 0 20rpx;
  border-radius: 10rpx;
}

.goods-item .right {
  position: relative;
    top: 50%;
    left: 0;
    transform: translateY(-50%);
}

.goods-item .right-img {
  width: 36rpx;
  height: 100%;
}
.goods-item .text {
  overflow: hidden;
  position: relative;
  top: 0;
  left: 0;
}
.goods-item .text .title,
.goods-item .text .desc {
  overflow:hidden; 
  text-overflow:ellipsis;
  white-space:nowrap; 
}
.text .title {
  font-size: 36rpx;
}
.text .desc {
  font-size: 26rpx;
  color: #afabab;
  margin-top: 16rpx;
}

.text .info {
  font-size: 36rpx;
  position: absolute;
  bottom: 0;
  left: 0;
  width: 100%;
}

.info .price {
  color: #f36437;
}
.info .count {
  position: absolute;
  right: 0;
  bottom: 0;
}

.bottom-bar {
  position: absolute;
  bottom: -80rpx;
  left: 0;
  display: flex;
  height: 80rpx;
  width: 100%;
  background-color: rgb(238 238 238);
  padding: 0 10rpx;

}

.item {
  flex: 1;
  display: flex;
  align-items: center;
}

.all {
  width: 25%;
}

.all .right,
.goods-item .right {
  width: 36rpx;
  height: 36rpx;
  border-radius: 50%;
  border: 4rpx solid #524848;
  margin-right: 6rpx;
}

.all .right-img {
  width: 100%;
  height: 100%;
}

.total {
  color: rgb(82, 77, 77);
  font-size: 26rpx;
}
.calc {
  color: #fff;
  background-color: rgb(255 0 0);
  justify-content: center;
}

.bg {
  background-color: rgb(255 0 0);
}