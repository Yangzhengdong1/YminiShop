/* pages/profile/profile.wxss */
.login {
  height: calc(100vh);
}
.login-top {
  display: flex;
  align-items: center;
  background-color: #DB7093;
  height: 160rpx;
  padding: 20rpx 20rpx 0 20rpx;
}


.login-top-left {
  width: 20%;
}
.login-top-left image {
  width: 120rpx;
  height: 120rpx;
}

.login-top-centre {
  width: 70%;
  color: #fff;
  font-size: 28rpx;
  font-weight: 700;
}
.login-title {
  margin-left: 6rpx;
}
.phone-img {
  width: 30rpx;
  height: 30rpx;
  vertical-align: middle;
  margin-right: 10rpx;
}

.login-top-right {
  width: 10%;
}
.login-top-right image {
  width: 50rpx;
  height: 50rpx;
}

.login-main-top  {
  display: flex;
}
.login-main-top .item {
  flex: 1;
  padding: 36rpx;
  text-align: center;
  font-size: 26rpx;
}
.num {
  color: #f56639;
  font-size: 36rpx;
  font-weight: 700;
}
.item-title {
  font-size: 24rpx;
  color: rgb(138 131 131);
}
.discount {
  border-left: 6rpx solid rgb(163 159 159 / 20%);
  border-right: 6rpx solid rgb(163 159 159 / 20%);
}

.list {
  border-top: 16rpx solid rgb(163 159 159 / 20%);
  padding:20rpx 40rpx;
}
.list .item1 {
  padding: 20rpx 0;
  font-size: 28rpx;
  color: #000;
  border-bottom: 2rpx solid rgb(163 159 159 / 20%);
}

.list .item1 image {
  width: 40rpx;
  height: 40rpx;
  margin-right: 20rpx;
  vertical-align: middle;
}

.item1:last-child {
  border: 0;
}

