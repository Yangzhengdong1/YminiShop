/* components/y-tab-control/y-tab-control.wxss */
.tab-control {
  display: flex;
  padding-bottom: 10rpx;
  background-color: #fff;
}
.tab-control-item {
  flex: 1;
  text-align: center;
}
.tab-control-item .text {
  display: inline-block;
  padding: 10rpx;
  font-size: 28rpx;
}
.active {
  border-bottom: 6rpx solid #ff5777;
  color: #ff5777;
}