<view class="tab-control">
  <block wx:for="{{titles}}" wx:key="index">
    <view class="tab-control-item" 
          bind:tap = "itemClick"
          data-index = "{{ index }}">
      <text class="text {{ index === currentIndex ? 'active' : ''}}">
        {{item}}
      </text>
    </view>
  </block>
</view>